import java.io.*;

public class ReadFileByteByByte {
    public static void main(String[] args) {
        String path = "example.txt"; // ensure file exists
        try (FileInputStream fis = new FileInputStream(path)) {
            int b;
            while ((b = fis.read()) != -1) {
                System.out.print((char) b); // cast to char for text display
            }
        } catch (IOException e) {
            e.printStackTrace();
        }
    }
}
